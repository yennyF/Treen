<script type="text/javascript">
	(function() {
		$(".main_nav li[name-page='users']").addClass('active');



		/*
		* validate
		*/
		$(document).on('input', "#user_username", function(){
			validity.field(this, 'Debe contener entre 5 a 10 caracteres alfanuméricos minúsculos');
		});

		$(document).on('input', "#user_email", function(){
			validity.field(this, 'ejemplo@correo.com');
		});

		$(document).on('input', "#user_password", function(){
			validity.field(this, 'Debe contener 5 caracteres alfanuméricos y/o !@#$%&?');
			validity.fieldConfirm(this, ($(this).parents('form')).find('#user_passwordConfirm')[0]);
		});

		$(document).on('input', "#user_passwordConfirm", function(){
			validity.fieldConfirm(($(this).parents('form')).find('#user_password')[0], this);
		});



		/*
		* dialog
		*/
		var dialogFxs = {};
		var triggers = document.querySelectorAll(".trigger-dialog");
		for(var i = 0; i < triggers.length; ++i){ 
			var id = triggers[i].getAttribute('data-dialog');
			var dialog = document.getElementById(id);
			dialogFxs[id] = new DialogFx(dialog);
			triggers[i].addEventListener('click', dialogFxs[id].toggle.bind(dialogFxs[id]));
		}



		/*
		* CRUD
		*/
		/* create */
		$("#user_create form").on('ajax:success', function(event, data, status, xhr){
			if(data.errors !== undefined){
				validity.setProgress(this, 'error');
				validity.setFields(this, data.errors);
			}else{
				validity.setProgress(this, 'success', true);
				refreshTable();
			}
		}).on('ajax:error', function(event, xhr, status, error) {
			//report
		});

		/* edit */
		$('.table #bar-file .update').click(function(){
			var row = document.querySelector('.table .body li.selected');
			if(row){
				$.ajax({
					url: "/users/edit",
					data: {id: row.getAttribute('data-id')}, 
					type: "POST", 
					dataType: "script",
					error: function(){
						//report
					}
				});
			}
		});
		$(document).on('ajax:success', "#user_update_personal form, #user_update_password form", 
			function(event, data, status, xhr){
				if(data.errors !== undefined){
					validity.setProgress(this, 'error');
					validity.setFields(this, data.errors);
				}else{
					validity.setProgress(this, 'success');
					refreshTable();
				}
			}
		);
		$(document).on('ajax:error', "#user_update_personal form, #user_update_password form", 
			function(event, data, status, xhr){
				//report
			}
		);

		/* delete */
		$("#user_delete .accept").click(function(){
			var els = document.querySelectorAll('.table .body li.selected');
			if(els.length > 0){
				var ids = $(els).map(function(){ return $(this).attr("data-id"); }).get();
				$.ajax({
					url: "/users/delete",
					data: {ids: ids},
					type: "POST", 
					success: function(){
						refreshTable();
					},
					error: function(){
						//report
					}
				});
			}
			dialogFxs['user_delete'].toggle();
		});
		$("#user_delete .cancel").click(function(){
			dialogFxs['user_delete'].toggle();
		});



		/* 
		* order by
		*/
		$(".table ul.header span a").click(function(){
			var column = $(this).parents("span")[0];
			$(".table ul.header span.orderBy").removeClass("orderBy");
			$(column).addClass("orderBy");
			refreshTable();
		});



		/* 
		* refresh table list
		*/
		function refreshTable(){
			var orderBy = (document.querySelector(".table ul.header span.orderBy")).getAttribute('data-col');
			if(orderBy === 'username')
				var url = "/users/getUsersOrderByUsername";
			else if(orderBy === 'email')
				var url = "/users/getUsersOrderByEmail";
			else if(orderBy === 'occupation')
				var url = "/users/getUsersOrderByOccupation";
			else if(orderBy === 'rol')
				var url = "/users/getUsersOrderByRol";
			else 
				var url = "/users/user"

			var selectedBackups = $(".table ul.body li.selected").map(
				function(){
					return $(this).attr("data-id");
				}).get();

			$.ajax({url: url, type: "POST", dataType: "script",
				success: function(){
					for(var i = 0; i < selectedBackups.length; ++i){
						var li = document.querySelector(".table ul.body li[data-id='" + selectedBackups[i] + "']");
						if(li){
							li.className = "selected";
							li.querySelector("input[name='check-one']").checked = true;
						}
					}
					updateCheckbox();
				},
				error: function(){
					//report
				}
			});
		}
	})();
</script>